<?xml version="1.0" encoding="utf-8"?>
<com.zawhtetnaing.healthcare.app.assignment.zhn.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium_2">

    <ImageView
        android:id="@+id/iv_empty_image"
        android:layout_width="@dimen/empty_image_size"
        android:layout_height="@dimen/empty_image_size"
        android:layout_centerInParent="true"
        android:src="@drawable/notdatafound" />

    <TextView
        android:id="@+id/tv_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_empty_image"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Oops!! Sorry, the articles cannot be displayed at this time"
        android:textAlignment="center" />

</com.zawhtetnaing.healthcare.app.assignment.zhn.viewpods.EmptyViewPod>