<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="collapsingtoolbar_expanded_title_text_appearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="collapsingtoolbar_collapsed_title_text_appearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="toolbar_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="toolbar_text_style_gray" parent="toolbar_text_style">
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="toolbar_image_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/toolbar_image_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="like_share_comment_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="like_share_comment_numbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">@dimen/text_smaller</item>
    </style>

    <style name="category_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="category_image">
        <item name="android:layout_width">@dimen/category_image_size</item>
        <item name="android:layout_height">@dimen/category_image_size</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

</resources>
